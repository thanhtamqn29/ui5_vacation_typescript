<mvc:View
    controllerName="myapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App>
        <pages>
            <Page title="Login">
                <content>   
                    <VBox class="sapUiSmallMargin">
                        <Input id="usernameInput" value="{view>/username}" placeholder="Username" />
                        <Input id="passwordInput" type="Password" value="{view>/password}" placeholder="Password" />
                        <Button text="Login" press="onLoginPress" />
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
