    <Page title="Employee Leave Requests">
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox>
                    <SearchField
                        id="searchName"
                        placeholder="Search by Name"
                        search="onSearch"
                    />
                    <ComboBox
                        id="searchDepartment"
                        placeholder="Select Department"
                        selectionChange="onSearch"
                    >
                        <items />
                    </ComboBox>
                    <DatePicker
                        id="searchDate"
                        placeholder="Select Date"
                        change="onSearch"
                    />
                    <MenuButton
                        text="Export"
                        icon="sap-icon://action"
                        menu="{ path: 'menuModel>/items', templateShareable: true }"
                    >
                        <menu>
                            <Menu itemSelected="onMenuAction">
                                <MenuItem
                                    text="Export as PDF"
                                    icon="sap-icon://pdf-attachment"
                                />
                                <MenuItem
                                    text="Export to Excel"
                                    icon="sap-icon://excel-attachment"
                                />
                            </Menu>
                        </menu>
                    </MenuButton>
                </HBox>

                <Table
                    id="leaveRequestsTable"
                    items="{path: 'view>/value'}"
                >
                    <columns>
                        <Column>
                            <Text text="REQUEST_ID" />
                        </Column>
                        <Column>
                            <Text text="DAY_OFF TYPE" />
                        </Column>
                        <Column>
                            <Text text="USERNAME" />
                        </Column>
                        <Column>
                            <Text text="DERPARTMENT_NAME" />
                        </Column>
                        <Column>
                            <Text text="REASON" />
                        </Column>
                        <Column>
                            <Text text="STATUS" />
                        </Column>
                        <Column>
                            <Text text="START_DAY" />
                        </Column>
                        <Column>
                            <Text text="END_DAY" />
                        </Column>
                        <Column>
                            <Text text="IS_OUTOFDAY" />
                        </Column>
                        <Column>
                            <Text text="COMMENT" />
                        </Column>
                        <Column>
                            <Text text="SHIFT" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{view>request_ID}" />
                                <Text text="{view>dayOffType}" />
                                <Text text="{view>username}" />
                                <Text text="{view>departmentName}" />
                                <Text text="{view>reason}" />
                                <Text text="{view>request_status}" />
                                <Text text="{view>startDay}" />
                                <Text text="{view>endDay}" />
                                <Text text="{view>isOutOfDay}" />
                                <Text text="{view>comment}" />
                                <Text text="{view>shift}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
