<mvc:View
    controllerName="myapp.controller.HrManager"
    xmlns:mvc="sap.ui.core.mvc"
     xmlns:core="sap.ui.core"
    xmlns="sap.m">
   <Page title="Employee Leave Requests">
        
        <content>
            <VBox class="sapUiSmallMargin">
<HBox>
    <SearchField
        id="searchName"
        placeholder="Search by Name"
        search="onSearch"/>
    <ComboBox
        id="searchDepartment"
        placeholder="Select Department"
        selectionChange="onSearch">
        <items>
            
        </items>
    </ComboBox>
     <DatePicker
        id="searchDate"
        placeholder="Select Date"
        change="onSearch" />
</HBox>

                <Table
                    id="leaveRequestsTable"
                    items="{path: 'view>/value'}">
                    <columns>
                        <Column>
                            <Text text="Request ID" />
                        </Column>
                        <Column>
                            <Text text="Type" />
                        </Column>
                          <Column>
                            <Text text="Full Name" />
                        </Column>
                          <Column>
                            <Text text="Department Name" />
                        </Column>
                        <Column>
                            <Text text="Reason" />
                        </Column>
                        <Column>
                            <Text text="Status" />
                        </Column>
                        <Column>
                            <Text text="Start Day" />
                        </Column>
                        <Column>
                            <Text text="End day" />
                        </Column>
                        <Column>
                            <Text text="Is out of Day" />
                        </Column>
                        <Column>
                            <Text text="Comment" />
                        </Column>
                        <Column>
                            <Text text="Shift" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{view>request_ID}" />
                                <Text text="{view>dayOffType}" />
                                <Text text="{view>fullName}" />
                                <Text text="{view>departmentName}" />
                                <Text text="{view>reason}" />
                                <Text text="{view>request_status}" />
                                <Text text="{view>startDay}" />
                                <Text text="{view>endDay}" />
                                 <Text text="{view>isOutOfDay}" />
                                 <Text text="{view>comment}" />
                                <Text text="{view>shift}" />								
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>      
    </Page>
</mvc:View>